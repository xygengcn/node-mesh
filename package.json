{
    "name": "node-mesh",
    "version": "1.0.0",
    "description": "Master - Branch 形式 Nodejs 微服务框架",
    "types": "dist/index.d.ts",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "scripts": {
        "build": "rm -rf ./dist && rollup -c rollup.config.js",
        "server": "env-cmd -r .env.js -e development nodemon examples/server.dev.ts",
        "dev": "env-cmd -r .env.js -e development nodemon examples/client.dev.ts",
        "test": "env-cmd -r .env.js -e test mocha test/**.test.ts -t=5000",
        "test:dev": "env-cmd -r .env.js -e development mocha test/**.test.ts",
        "pref": "env-cmd -r .env.js -e test mocha test/pref.test.ts"
    },
    "homepage": "https://github.com/xygengcn/node-mesh",
    "repository": {
        "type": "git",
        "url": "https://github.com/xygengcn/node-mesh.git"
    },
    "keywords": [
        "node",
        "typescript",
        "net",
        "master",
        "branch",
        "framework",
        "microservice",
        "publish",
        "request",
        "subscribe",
        "micro",
        "service"
    ],
    "author": "xygengcn",
    "mail": "xygengcn@qq.com",
    "license": "MIT",
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "^16.11.12",
        "assert": "^2.0.0",
        "colors": "^1.4.0",
        "env-cmd": "^10.1.0",
        "eslint": "^8.4.1",
        "mocha": "^10.1.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "rollup": "^3.6.0",
        "rollup-plugin-dts": "^5.0.0",
        "rollup-plugin-tsc-alias": "^1.1.2",
        "rollup-plugin-typescript2": "^0.34.1",
        "ts-node": "^10.4.0",
        "tsc-alias": "^1.6.3",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.3"
    },
    "dependencies": {
        "amp": "^0.3.1",
        "amp-message": "^0.1.2",
        "eventemitter3": "^5.0.0",
        "json-stringify-safe": "^5.0.1"
    },
    "mocha": {
        "require": [
            "ts-node/register",
            "tsconfig-paths/register"
        ],
        "ui": "bdd"
    }
